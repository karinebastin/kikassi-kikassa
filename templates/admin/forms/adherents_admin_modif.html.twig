{% import './admin/_macros.html.twig' as macros %}

{% set envoi = "<div class='btn-text px-2 admin-form d-block'><button type='submit' class='envoi-btn font-raleway'>Modifier <br> status admin</button></div>" %}
{% set continue = "" %}
{% set arrowClass = 'd-none' %}
{% set arrow = true %}
{% set footerPadding = 's-padding' %}

{% block admin %}

	<form method='post' novalidate:'novalidate'>
		<input id='hidden-adh' hidden type="text" name='adherent' class='input'/>
		<div class="container">
			<div class="row modif-message text-center"></div>
			<div class="row">
				<div class="col">
					<div class='admin-warning'></div>
					<div class="form-group admin-select d-none">
						<label for="admin">Enlever / ajouter des droits Admin</label>
						<select type="radio" name="admin" id="admin-form" class="form-control select-height" required></select>
					</div>
				</div>
			</div>
		</div>
		{{macros.footer_color(section, return_path, arrow, envoi, continue, arrowClass, footerPadding)}}
	</form>
{% endblock %}
