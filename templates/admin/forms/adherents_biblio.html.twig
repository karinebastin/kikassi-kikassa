{% extends './admin/base-admin.html.twig' %}
{% import './admin/_macros.html.twig' as macros %}


{% set envoi = "<div>" ~ form_widget(form.save) ~ "</div>" %}

{% block title %}Adhérents
{% endblock %}


{% block body %}
	<body class={{color}}>
		<div class="main-title font-raleway">
			<h1 class="text-center font-raleway mb-5">Inscription de
				{# {{adherent.nom}} #}
				à la Bibliothèque des Objets</h1>
			{{ form_start(form)}}
			<div class="container first-part " data-controller="admin">
				<div class="row">
					<div class="col">
						<div class="form-group">
							{{ form_widget(form.categorie_fourmi , {'attr': {'class': 'form-control p-4'}}) }}
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col">
						<div class="form-group">
							{{ form_widget(form.depot_permanent, {'attr': {'class': 'form-control select-height'}}) }}
						</div>
					</div>
					<div class="col">
						<div class="form-group">
							{{ form_widget(form.fin_rc, {'attr': {'class': 'form-control p-4'}}) }}
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col">
						<div class="form-group">
							{{ form_widget(form.justif_identite, {'attr': {'class': 'form-control p-4', "placeholder" : "holo"}}) }}
						</div>
					</div>
					<div class="col">
						<div class="form-group">
							{{ form_widget(form.justif_domicile, {'attr': {'class': 'form-control p-4'}}) }}
						</div>
					</div>
				</div>

			</div>
			{{macros.footer_color(section, return_path, arrow, envoi)}}

			{{ form_end(form)}}
		</div>

	</body>
{% endblock %}
{% block footer %}{% endblock %}
