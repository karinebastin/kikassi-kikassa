{% extends './admin/base-admin.html.twig' %}


{% block title %}Connexion
{% endblock %}

{% block header %}{% endblock %}


{% block body %}

	<body class="vh-100">
		<div class="login-form font-raleway">
			<h1 class="first-part text-center font-raleway mb-5">
				connection à votre compte
				<br>
				Admin ou Super-Admin</h1>
			<form method="post">
				<div class="container">
					<div class="row">
						<div class="col-3"></div>
						<div class="col">
							{% if error %}
								<div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}
							<div class="form-group">
								<input type="email" value="" name="email" id="inputEmail" class="form-control p-4" required autofocus>
							</div>
						</div>
						<div class="col-3"></div>
					</div>
					<div class="row">
						<div class="col-3"></div>
						<div class="col">
							<div class="form-group">
								<input type="password" name="password" id="inputPassword" class="form-control p-4" required>
								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
							</div>
						</div>
						<div class="col-3"></div>
					</div>
					<div class="row">
						<div class="col-3"></div>
						<div class="col mb-3">
							<a href={{path('admin_forgot_password_request')}} class="text-primary">Mot de passe oublié</a>
						</div>
						<div class="col-3"></div>
					</div>
					<div class="row">
						<div class="col text-center">
							<div class="form-group">
								<button class="btn bar-btn font-raleway" type="submit">Connexion</button>
							</div>
						</div>
					</div>
				</div>

			</form>
		</div>
	</body>
{% endblock %}
{% block footer %}{% endblock %}
